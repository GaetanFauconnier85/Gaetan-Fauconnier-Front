{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="css/home.css">
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="oui">
    {{form_start(form)}}
    {{form_row(form.aeroport_start, {'attr': {'placeholder': 'Aéroport de départ'} })}}
    {{form_row(form.aeroport_end, {'attr': {'placeholder': 'Aéroport d\'arrivé'} })}}
    {{form_row(form.hour_start)}}
    <br>
    {{form_row(form.enregistrer, {'attr': {class:'form-control btn btn-primary'} })}}

    {{form_end(form)}}
</div>


{% endblock %}
